<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myth.dao.UserMapper">

    <select id="getUserList" resultType="com.myth.pojo.User">
        select * from user
  </select>

    <select id="getUserById" parameterType="int" resultType="com.myth.pojo.User">
        select * from user where id = #{id}
    </select>

    <insert id="addUser" parameterType="com.myth.pojo.User">
        insert into user(id,name,pwd) values (#{id},#{name},#{pwd})
    </insert>
    
    <update id="updateUser" parameterType="com.myth.pojo.User">
        update  user set name=#{name},pwd=#{pwd} where id=#{id};
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from user where id=#{id}
    </delete>

    <select id="getUserLike" resultType="com.myth.pojo.User">
        select * from user where name like "%"#{name}"%"
    </select>
</mapper>